<div class="container pt-5">
  <%= form_with(model: @review, url: book_reviews_path(@book), local: true) do |form| %>
    <div class="form-group">
      <%= form.label :rating, class: "form-label" %>
      <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), { include_blank: "Select rating" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :comment, class: "form-label" %>
      <%= form.text_area :comment, class: "form-control", rows: 5 %>
    </div>

    <%= form.submit "Submit", class: "black-button-2" %>
  <% end %>
</div>
